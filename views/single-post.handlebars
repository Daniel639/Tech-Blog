<div class="post-container">
  <h2>{{post.title}}</h2>
  <p>Posted by {{post.user.username}} on {{format_date post.createdAt}}</p>
  <p>{{post.content}}</p>
</div>

{{#if logged_in}}
<div class="comment-form">
  <h3>Add a Comment</h3>
  <form class="form new-comment-form">
    <div class="form-group">
      <label for="comment-content">Comment:</label>
      <textarea class="form-input" id="comment-content" name="content"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>
{{/if}}

{{#if post.comments.length}}
<div class="comments">
  <h3>Comments</h3>
  {{#each post.comments as |comment|}}
  <div class="comment">
    <p>{{comment.content}}</p>
    <p>- {{comment.user.username}}, {{format_date comment.createdAt}}</p>
  </div>
  {{/each}}
</div>
{{/if}}

<script src="/js/comment.js"></script>