<div class="dashboard-container">
  <h2>Your Dashboard</h2>

  <section class="new-post-section">
    <h3>Create a New Blog Post</h3>
    <form class="new-post-form">
      <div class="form-group">
        <input type="text" id="post-title" name="title" placeholder="Post Title" required>
      </div>
      <div class="form-group">
        <textarea id="post-content" name="content" placeholder="Post Content" required></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Post</button>
      </div>
    </form>
  </section>

  <section class="user-posts">
    <h3>Your Blog Posts</h3>
    {{#if posts.length}}
      <div class="post-list">
        {{#each posts as |post|}}
        <div class="post-item" data-post-id="{{post.id}}">
          <h4>{{post.title}}</h4>
          <p>Posted on {{format_date post.createdAt}}</p>
          <div class="post-actions">
            <a href="/dashboard/edit/{{post.id}}" class="btn btn-secondary">Edit</a>
            <button class="btn btn-danger delete-post" data-id="{{post.id}}">Delete</button>
          </div>
        </div>
        {{/each}}
      </div>
    {{else}}
      <p>You haven't created any posts yet.</p>
    {{/if}}
  </section>
</div>

<script src="/js/dashboard.js"></script>