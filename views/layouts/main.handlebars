    <main class="container">
        {{{body}}}
    </main>

    <footer class="footer">
        <p>&copy; 2023 Tech Blog. All rights reserved.</p>
    </footer>

    {{#if logged_in}}
    <script src="/js/logout.js"></script>
    {{/if}}
